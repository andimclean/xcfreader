{
  "name": "xcfreader",
  "version": "1.0.0",
  "description": "Reads in GIMP xcf files",
  "type": "module",
  "main": "dist/gimpparser.js",
  "types": "dist/gimpparser.d.ts",
  "browser": "dist/xcfreader.browser.mjs",
  "exports": {
    ".": {
      "types": "./dist/gimpparser.d.ts",
      "browser": "./dist/xcfreader.browser.mjs",
      "import": "./dist/gimpparser.js",
      "default": "./dist/gimpparser.js"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.js",
      "default": "./dist/node.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/xcfreader.browser.mjs",
      "default": "./dist/xcfreader.browser.js"
    }
  },
  "files": [
    "dist/gimpparser.js",
    "dist/gimpparser.d.ts",
    "dist/gimpparser.js.map",
    "dist/node.js",
    "dist/node.d.ts",
    "dist/node.js.map",
    "dist/browser.js",
    "dist/browser.d.ts",
    "dist/browser.js.map",
    "dist/xcfreader.browser.js",
    "dist/xcfreader.browser.js.map",
    "dist/xcfreader.browser.mjs",
    "dist/xcfreader.browser.mjs.map",
    "dist/lib/",
    "dist/types/"
  ],
  "dependencies": {
    "binary-parser": "^1.1.5"
  },
  "peerDependencies": {
    "pngjs": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "pngjs": {
      "optional": true
    }
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@types/node": "^20.10.0",
    "@types/pngjs": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "c8": "^10.1.3",
    "esbuild": "^0.27.2",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "pngjs": "^7.0.0",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "tsc",
    "build:browser": "node esbuild.config.mjs",
    "build:all": "npm run build && npm run build:browser",
    "watch": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "docs": "typedoc --out docs src/gimpparser.ts",
    "benchmark": "node dist/benchmarks/benchmark.js",
    "multi": "npm run build && node dist/examples/multi.js",
    "single": "npm run build && node dist/examples/single.js",
    "map": "npm run build && node dist/examples/map.js",
    "text": "npm run build && node dist/examples/text.js",
    "empty": "npm run build && node dist/examples/empty.js",
    "test": "npm run build && node dist/tests/runner.js",
    "test:coverage": "npm run build && c8 node dist/tests/runner.js",
    "coverage": "npm run test:coverage",
    "prepublishOnly": "npm run build:all"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:andimclean/xcfreader.git"
  },
  "keywords": [
    "gimp",
    "xcf",
    "parser",
    "browser"
  ],
  "author": "Andi McLean",
  "license": "MIT",
  "homepage": "https://github.com/andimclean/xcfreader#readme"
}
