{
  "name": "ui-xcfimage",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/ui-xcfimage/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "commands": [
          "tsc",
          "node esbuild.config.mjs"
        ],
        "cwd": "packages/ui-xcfimage",
        "parallel": false
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "playwright test",
        "cwd": "packages/ui-xcfimage"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "dependsOn": ["test"],
      "options": {
        "command": "node analyze-coverage.mjs",
        "cwd": "packages/ui-xcfimage"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx serve -l 3000 ../..",
        "cwd": "packages/ui-xcfimage"
      }
    }
  },
  "tags": ["library", "web-component"],
  "implicitDependencies": ["xcfreader"]
}
