{
  "name": "@theprogrammingiantpanda/ha-xcfimage-card",
  "version": "0.2.0",
  "description": "Home Assistant custom card for rendering GIMP XCF files with entity-based layer control",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "main": "dist/ha-xcfimage-card.js",
